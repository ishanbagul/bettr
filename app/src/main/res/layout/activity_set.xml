<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jstyle.test2025.activity.ActivityDevicesNameActivity">


   <EditText
       android:id="@+id/ed_content_name"
       android:maxLength="14"
       android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghjjklmnopqrstuvwxyz"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:text="设置设备名Set Device Name"
        android:id="@+id/set"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="获取设备名Get device name"
        android:id="@+id/get"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/info"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>